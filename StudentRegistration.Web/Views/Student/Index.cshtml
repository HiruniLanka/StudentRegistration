@model IEnumerable<StudentRegistration.Domain.Entities.Student>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0"><i class="bi bi-people-fill me-2"></i>Student Registration</h3>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="bi bi-person-plus-fill me-1"></i>Add New Student
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="bi bi-card-text me-1"></i>NIC</th>
                                        <th><i class="bi bi-person me-1"></i>Name</th>
                                        <th><i class="bi bi-geo-alt me-1"></i>Address</th>
                                        <th><i class="bi bi-envelope me-1"></i>Email</th>
                                        <th><i class="bi bi-telephone me-1"></i>Phone</th>
                                        <th><i class="bi bi-mortarboard me-1"></i>Qualifications</th>
                                        <th class="text-center"><i class="bi bi-gear me-1"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var s in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">@s.NIC</td>
                                            <td>@s.FirstName @(s.MiddleName) @s.LastNameWithInitials</td>
                                            <td>@s.Address</td>
                                            <td>
                                                <a href="mailto:@s.Email" class="text-decoration-none">
                                                    <i class="bi bi-envelope-fill me-1"></i>@s.Email
                                                </a>
                                            </td>
                                            <td>
                                                <a href="tel:@s.Phone" class="text-decoration-none">
                                                    <i class="bi bi-phone-fill me-1"></i>@s.Phone
                                                </a>
                                            </td>
                                            <td>
                                                <span class="text-truncate d-inline-block" style="max-width: 200px;"
                                                      title="@s.BasicQualifications">
                                                    @s.BasicQualifications
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@s.Id"
                                                       class="btn btn-sm btn-warning"
                                                       title="Edit Student">
                                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@s.Id"
                                                       class="btn btn-sm btn-danger"
                                                       title="Delete Student"
                                                       onclick="return confirm('Are you sure you want to delete this student?');">
                                                        <i class="bi bi-trash-fill me-1"></i>Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h4 class="mt-3 text-muted">No Students Found</h4>
                            <p class="text-muted">Click "Add New Student" to get started.</p>
                            <a asp-action="Create" class="btn btn-success mt-2">
                                <i class="bi bi-person-plus-fill me-1"></i>Add Your First Student
                            </a>
                        </div>
                    }
                </div>
                @if (Model != null && Model.Any())
                {
                    <div class="card-footer text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Total Students: <strong>@Model.Count()</strong>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
        cursor: pointer;
    }

    .btn-group .btn {
        margin: 0 2px;
    }

    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>